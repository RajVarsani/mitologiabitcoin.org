    .bg(style=`background-image:url(${assetPath("/img/security/end-bg.svg")})`)
    .content
      span.prelude Volumen 3 muy pronto
      h1.title ¿El fin?
      a.button(href="/volumen-1-mineria-bitcoin/")
        span Leer Volumen 1: Mineía Bitcoin
